<p id="notice"><%= notice %></p>
<% @contador = 0%>
<div class = "category_wrapper">
    <% @products.each do |product| %>
        <% if @contador%3 == 0 %>
            <div class = "row">
        <% end %>
        <div class = "col-4 product">
            <%= link_to product, class: "picture" do%>
                <%= image_tag product.image.url unless product.image.blank? %>
            <% end %>
            <div class = "details">
                <%= link_to product.name, product%>
                <%= link_to 'R$ ' + number_with_precision(product.price, precision: 2).to_s(),product , class: "price" %>
            </div>
        </div>
        <% @contador += 1 %>
        <% if @contador%3 == 0 %>
            </div>
        <% end %>
    <% end %>
    <% while @contador%3 != 0 %>
        <div class = "col-4 product"></div>
        <% @contador += 1 %>
    <% end %>
</div>
