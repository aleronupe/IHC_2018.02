<div class = "login">
  <div class = "row">
    <!-- <div class = "col-6 left">
        <%=image_tag("logo.svg")%>
    </div> -->
    <div class = "col-6 offset-3 right">

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.hidden_field :remember_me, value: true %>
      </div>
      <% end -%>
      <div class = "row">
        <div class = "col-5">
          <div class="field">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "E-mail" %>
          </div>
        </div>
        <div class = "col-5">
          <div class="field">
            <%= f.password_field :password, autocomplete: "current-password", placeholder: "Senha" %>
            <%= link_to "Esqueci minha senha", new_password_path(resource_name) %><br />
          </div>
        </div>
        <div class = "col-2">
          <div class="actions">
            <%= f.submit "Entrar", class: "btn-primary btn" %>
          </div>
        </div>
      </div>

      <% end %>

    <p class = "texto-descritivo">
      Ué! Você não tem um cadastro ainda?
    </p>

    <%= link_to "Cadastre-se agora", new_registration_path(resource_name), class: "btn btn-secondary" %><br />

    </div>
  </div>

</div>
