
<div class="container-1 m-auto">
  <h2 class="text-center mt-4">Cadastro</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :email, :class => 'font-raleway' %>
      <%= f.email_field :email, :class => 'form-control', autofocus: true, autocomplete: "email" %>
    </div>
    
    <div class="form-froup mb-3">
      <%= f.label :username, :class => 'font-raleway', :value => 'Nome de Usuário' %>
      <%= f.text_field :username, :class => 'form-control' %>
    </div>

    <div class="field mb-3">
      <%= f.label :password, :class => 'font-raleway', :value => 'Senha' %>
      <% if @minimum_password_length %>
      <em class="font-raleway">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", :class => 'form-control' %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, :class => 'font-raleway', :value => 'Confirmação de Senha' %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => 'form-control' %>
    </div>

    <div class = "field mt-3">
      <%=f.label :avatar do%>
      <%=f.file_field :avatar %>
      <%=f.hidden_field :avatar_cache %>
      <%end%>  
    </div>

    <div class="actions">
      <%= f.submit "Sign up",  :class => 'font-raleway btn-primary float-right pt-2 pb-2', :value => "Cadastrar" %>
    </div>

  <% end %>
</div>