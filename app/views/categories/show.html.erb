<div class = "category_wrapper">

<% @products.each do |product| %>
    <% if @contador%3 == 0 %>
        <div class = "row">
    <% end %>
    <div class = "col-4 product">
        <div class = "picture">
            <%= image_tag product.image.url unless product.image.blank? %>
        </div>
        <div class = "details">
            <p><%= product.name %></p>
            <p class = "price">R$ <%= product.price %></p>
        </div>
    </div>
    <% @contador += 1 %>
    <% if @contador%3 == 0 %>
        </div>
    <% end %>
<% end %>


</div>

